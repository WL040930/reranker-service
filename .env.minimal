# Minimal Configuration - Ultra Low Memory Usage
# For very tight memory constraints (256-400MB total)

# Smallest model and most conservative settings
RERANKER_MODEL_NAME=cross-encoder/ms-marco-TinyBERT-L-2-v2
RERANKER_MAX_LENGTH=32
RERANKER_PRELOAD_MODEL=false

# Minimal cache
RERANKER_CACHE_SIZE=2
RERANKER_CACHE_TTL_SECONDS=120

# Server Configuration
RERANKER_HOST=127.0.0.1
RERANKER_PORT=8000
RERANKER_LOG_LEVEL=WARNING

# Request Configuration
RERANKER_REQUEST_TIMEOUT_SECONDS=15.0

# Memory Optimization Environment Variables
TOKENIZERS_PARALLELISM=false
OMP_NUM_THREADS=1
MKL_NUM_THREADS=1
TRANSFORMERS_VERBOSITY=error
TRANSFORMERS_NO_ADVISORY_WARNINGS=1

# Expected Memory: ~200-250MB (model loads on first request)
