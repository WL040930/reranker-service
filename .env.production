# Production Environment Configuration
# Optimized for 512MB servers in production

# Model Configuration - Fast startup with preloading
RERANKER_MODEL_NAME=cross-encoder/ms-marco-TinyBERT-L-2-v2
RERANKER_MAX_LENGTH=64
RERANKER_PRELOAD_MODEL=true

# Production Cache Settings
RERANKER_CACHE_SIZE=4
RERANKER_CACHE_TTL_SECONDS=180

# Server Configuration
RERANKER_HOST=0.0.0.0
RERANKER_PORT=7860
RERANKER_LOG_LEVEL=INFO

# Request Configuration
RERANKER_REQUEST_TIMEOUT_SECONDS=30.0

# Memory Optimization Environment Variables
TOKENIZERS_PARALLELISM=false
OMP_NUM_THREADS=1
MKL_NUM_THREADS=1
TRANSFORMERS_VERBOSITY=error
TRANSFORMERS_NO_ADVISORY_WARNINGS=1

# Expected Memory: ~355MB (preloaded, production ready)
